pkgname=zed.app
pkgver=0.209.7
pkgrel=0
pkgdesc="Code editor designed for high-performance collaboration with humans and AI."
arch=amd64
url=https://zed.dev
license=MIT

source="b0f294868015e7fe93edc09cffabdd0a https://zed.dev/api/releases/stable/latest/zed-linux-x86_64.tar.gz"

build() {
	mkdir -p "$pkgdir/opt" "$pkgdir/usr/bin" "$pkgdir/usr/share/applications" "$pkgdir/usr/share/icons"
	rsync -r "$srcdir/$pkgname" "$pkgdir/opt/"
	ln -s /opt/$pkgname/bin/zed "$pkgdir/usr/bin/"
	ln -s /opt/$pkgname/share/applications/zed.desktop "$pkgdir/usr/share/applications/"
	ln -s /opt/$pkgname/share/icons/hicolor/512x512/apps/zed.png "$pkgdir/usr/share/icons/"
}
